{
  "version": "0.2",
  "language": "en",
  "ignorePaths": [
    "node_modules",
    "bin",
    "obj",
    "**/*.png",
    "**/*.jpg",
    "**/*.svg",
    "**/*.lock",
    "**/*.min.*",
    ".terraform",
    "**/__pycache__",
    "**/.venv",
    "**/*.pyc",
    "dist",
    "out"
