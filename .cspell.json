    "**/*.md",
    "**/*.bicep",
    "**/*.json",
    "**/*.tf",
    "**/*.tfvars",
    "**/*.yml",
    "**/*.yaml",
    "**/*.py",
    "**/*.sh",
    "**/*.ps1"
